@model SweetHospitalver3.Models.KETQUA
@{
    ViewBag.Title = "Lịch sử khám bệnh";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<style>
    .reupcontent {
        width: 100% !important;
    }

    .circlegreen {
        height: 10px;
        width: 10px;
        background-color: #F2494C;
        border-radius: 50%;
    }

    .reupsubmit {
        margin: 20px 0 300px 0px;
        display: flex;
        justify-content: center;
    }

    .table-editdelete:hover, .bi-trash:hover {
        transform: translateY(-5px);
        cursor: pointer;
        color: #FC0004;
    }

    a {
        color: inherit;
    }

    .table-editpencil:hover, .bi-pencil:hover {
        transform: translateY(-5px);
        cursor: pointer;
        color: #22FC00;
    }

    .table-editpencil {
        margin-right: 10px;
    }

    .m-21 {
        margin: 8px 70px 8px 8px;
    }

    .col-sm-12 {
        margin-bottom: 20px;
    }

    .content-full {
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
        max-width: 250px !important;
    }

    .table-statusedit-circlegreen {
        height: 10px;
        width: 10px;
        background-color: #22FC00;
        border-radius: 50%;
        display: inline-block;
        margin-bottom: 2px;
        margin-right: 8px;
    }

    .table-statusedit-circlered {
        height: 10px;
        width: 10px;
        background-color: #FC0004;
        border-radius: 50%;
        display: inline-block;
        margin-bottom: 2px;
        margin-right: 8px;
    }

    tr:hover {
        cursor: pointer;
    }
</style>
<div class="container-fluid pt-4 px-4">
    <h2>Kết quả khám bệnh</h2>
    <div class="col-sm-12 col-xl-6 reupcontent">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Mã phiếu: @Model.MaPhieu</h6>
            <dl class="row mb-0">
                <dt class="col-sm-4">Mã hồ sơ</dt>
                <dd class="col-sm-8"><div class="p-2 mb-2 bg-white text-dark">@Model.MaHS</div></dd>

                <dt class="col-sm-4">Họ và tên</dt>
                <dd class="col-sm-8"><div class="p-2 mb-2 bg-white text-dark">@Model.HOSO.HoTen</div></dd>

                <dt class="col-sm-4">Ngày tháng năm sinh</dt>
                <dd class="col-sm-8"><div class="p-2 mb-2 bg-white text-dark">@Model.HOSO.NgaySinh.ToString("dd/MM/yyyy")</div></dd>

                <dt class="col-sm-4">Số điện thoại</dt>
                <dd class="col-sm-8"><div class="p-2 mb-2 bg-white text-dark">@Model.HOSO.Sdt</div></dd>

                <dt class="col-sm-4">Giới tính</dt>
                <dd class="col-sm-8"><div class="p-2 mb-2 bg-white text-dark">@Model.HOSO.GioiTinh</div></dd>

                <dt class="col-sm-4">Khoa khám bệnh</dt>
                <dd class="col-sm-8"><div class="p-2 mb-2 bg-white text-dark">@Model.Khoa</div></dd>

                <dt class="col-sm-4">Kết quả</dt>
                <dd class="col-sm-8"><div class="p-2 mb-2 bg-white text-dark">@Model.KetQua1</div></dd>

                <dt class="col-sm-4">Chuẩn đoán</dt>
                <dd class="col-sm-8"><div class="p-2 mb-2 bg-white text-dark">@Model.ChuanDoan</div></dd>

                <dt class="col-sm-4">Lời khuyên</dt>
                <dd class="col-sm-8"><div class="p-2 mb-2 bg-white text-dark">@Model.LoiKhuyen</div></dd>

                <dt class="col-sm-4">Ngày khám</dt>
                <dd class="col-sm-8"><div class="p-2 mb-2 bg-white text-dark">@Model.NgayKham.ToString("dd/MM/yyyy")</div></dd>

                <dt class="col-sm-4">Ngày tái khám</dt>
                <dd class="col-sm-8"><div class="p-2 mb-2 bg-white text-dark" style="height:48px !important;">@Model.NgayTK@*.ToString("dd/MM/yyyy")*@</div></dd>

                <dt class="col-sm-4">Hình ảnh 1</dt>
                <dd class="col-sm-8"><div class="p-2 mb-2 bg-white text-dark" style="min-height:48px !important;">@Model.Ha1</div></dd>

                <dt class="col-sm-4">Hình ảnh 2</dt>
                <dd class="col-sm-8"><div class="p-2 mb-2 bg-white text-dark"style="min-height:48px !important;">@Model.Ha2</div></dd>

                <dt class="col-sm-4">Trạng thái</dt>
                <dd class="col-sm-8"><div class="p-2 mb-2 bg-white text-dark">@Model.TrangThai</div></dd>

            </dl>
        </div>
    </div>
    <div class="reupsubmit">
        <button type="button" class="btn btn-outline-secondary m-21" onclick="window.location.href='/Admin/Record/Record';">Quay lại</button>
        <button type="button" class="btn btn-outline-success m-21" onclick="window.location.href = '/Admin/Record/Editrecordhis/@Model.MaPhieu';">Sửa kết quả khám bệnh</button>
        
    </div>
</div>

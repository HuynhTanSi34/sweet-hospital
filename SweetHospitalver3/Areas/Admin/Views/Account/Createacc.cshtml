@model SweetHospitalver3.Models.TAIKHOAN

@{
    ViewBag.Title = "Createacc";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<style>
    .reupsubmit {
        margin: 30px 0 30px 0px;
        display: flex;
        justify-content: center;
    }

    .m-21 {
        margin: 8px 70px 8px 8px;
    }

    .editaccountfix {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: center;
        width: 700px !important;
    }
</style>
<div class="container-fluid pt-4 px-4">
    <h2>Thêm tài khoản</h2>
    <div class="col-sm-12 col-xl-6">
        <div class="bg-light rounded h-100 p-4">
            @using (Html.BeginForm("Createacc", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "Tạo tài khoản thất bại, các trường phải được nhập đầy đủ", new { @class = "alert alert-danger" })
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Tài khoản</label>
                    @Html.TextBoxFor(model => model.TK, new { @class = "form-control", @id = "exampleInputEmail1", @type = "text" })
                    @Html.ValidationMessageFor(model => model.TK)
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Mật khẩu</label>
                    @Html.TextBoxFor(model => model.Pass, new { @class = "form-control", @id = "exampleInputEmail1", @type = "text" })

                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Chức danh</label>
                    <select class="form-select mb-3" name="ChucDanh">
                        <option value="Bệnh nhân">Bệnh nhân</option>
                        <option value="Bác sĩ">Bác sĩ</option>
                        <option value="Nhân viên">Nhân viên</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Trạng thái</label>
                    <select class="form-select mb-3" name="TrangThai">
                        <option value="Đang làm việc">Đang làm việc</option>
                        <option value="Đã nghỉ việc">Đã nghỉ việc</option>
                        <option value="Bệnh nhân">Bệnh nhân</option>
                    </select>

                </div>
                <div class="reupsubmit">
                    <button type="button" class="btn btn-outline-secondary m-21" onclick="window.location.href='/Admin/Account/Account';">Hủy</button>
                    <input class="btn btn-outline-primary m-2" type="submit" value="Tạo" />
                </div>
            }
        </div>
    </div>
</div>
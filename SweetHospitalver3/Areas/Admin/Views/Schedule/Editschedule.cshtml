@model SweetHospitalver3.Models.THOIGIANBS

@{
    ViewBag.Title = "Thông tin lịch khám";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<style>
    .reupsubmit {
        margin: 30px 0 10px 0px;
        display: flex;
        justify-content: center;
    }

    .m-21 {
        margin: 8px 70px 8px 8px;
    }

    .editaccountfix {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: center;
        width: 700px !important;
    }

    .p-4 {
        margin-bottom: 50px;
        padding-right: 0 !important;
    }

    .col-xl-6 {
        width: 80%;
    }

    .col-sm-2 {
        width: 24%;
    }

    .col-sm-10 {
        width: 70%;
        padding-right: 0 !important;
    }

    .mb33 {
        margin-right: 0 !important;
        margin-left: 0 !important;
    }
</style>
<div class="container-fluid pt-4 px-4">
    <h2>Sửa thông tin lịch khám</h2>
    <div class="col-sm-12 col-xl-6">
        <div class="bg-light rounded h-100 p-4">
            @using (Html.BeginForm("Editschedule", "Schedule", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "Cập nhật thất bại", new { @class = "alert alert-danger" })
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Mã đăng ký</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.MaDK, new { @class = "form-control", @id = "MaDK" })
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Mã Bác sĩ</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.MaBS, new { @class = "form-control", @id = "MaBS" })
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Họ và tên</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.BACSI.HoTen, new { @class = "form-control", @id = "MaBS" })
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Khoa</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.BACSI.Khoa, new { @class = "form-control", @id = "MaBS" })
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Ngày</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Ngay, new { @class = "form-control", @id = "Ngay" , @type="text"})
                        
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="exampleInputEmail1" class="col-sm-2 col-form-label">Giờ</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Gio, new { @class = "form-control", @id = "Gio", @type = "time" })
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Trạng thái</label>
                    <div class="col-sm-10">
                        <select class="form-select row mb-3 mb33"
                                aria-label="Default select example" name="TrangThai" id="TrangThai">
                            <option value="Đã đặt" @(Model.TrangThai == "Đã đặt" ? "selected" : "")>Đã đặt</option>
                            <option value="Chưa đặt" @(Model.TrangThai == "Chưa đặt" ? "selected" : "")>Chưa đặt</option>
                            <option value="Đã hủy" @(Model.TrangThai == "Đã hủy" ? "selected" : "")>Đã hủy</option>
                        </select>
                    </div>
                </div>
                <div class="reupsubmit">
                    <button type="button" class="btn btn-outline-secondary m-21" onclick="window.location.href='/Admin/Schedule/Schedule';">Hủy</button>
                    <button type="submit" class="btn btn-outline-primary m-2">Lưu</button>
                </div>
            }
        </div>
    </div>
</div>
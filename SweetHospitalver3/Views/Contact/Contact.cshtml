@model SweetHospitalver3.Models.PHANHOI
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid bg-primary py-5 hero-header mb-5">
    <div class="row py-3">
        <div class="col-12 text-center">
            <h1 class="display-3 text-white animated zoomIn">Liên hệ với chúng tôi</h1>
            <a href="/Home" class="h4 text-white">Trang chủ</a>
            <i class="far fa-circle text-white px-2"></i>
            <a href="#" class="h4 text-white">Liên hệ</a>
        </div>
    </div>
</div>
<div class="container-fluid py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-xl-4 col-lg-6 wow slideInUp" data-wow-delay="0.1s">
                <div class="bg-light rounded h-100 p-5">
                    <div class="section-title">
                        <h5 class="position-relative d-inline-block text-primary text-uppercase">Liên hệ với chúng tôi</h5>
                        <h1 class="display-6 mb-4">Cứ liên lạc nếu bạn cần</h1>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-geo-alt fs-1 text-primary me-3"></i>
                        <div class="text-start">
                            <h5 class="mb-0">Địa chỉ</h5>
                            <span>Bình Thạnh, HCM city</span>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-envelope-open fs-1 text-primary me-3"></i>
                        <div class="text-start">
                            <h5 class="mb-0">Email</h5>
                            <span>info@example.com</span>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-phone-vibrate fs-1 text-primary me-3"></i>
                        <div class="text-start">
                            <h5 class="mb-0">Hotline</h5>
                            <span>+012 345 6789</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-6 wow slideInUp" data-wow-delay="0.3s">
                @using (Html.BeginForm("Contact", "Contact", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "Cập nhật thất bại", new { @class = "alert alert-danger" })
                    <div class="row g-3">
                        <div class="col-12">
                            @Html.TextBoxFor(x => x.HoTen, new { @class = "form-control border-0 bg-light px-4",@style="height:55px;", @id = "HoTen", @type = "text", @placeholder = "Họ và tên" })
                        </div>
                        <div class="col-12">
                            @Html.TextBoxFor(model => model.Sdt, new { @class = "form-control border-0 bg-light px-4",@id="Sdt", @placeholder = "Số điện thoại", @type = "text", @style = "height: 55px;" })
                        </div>
                        <div class="col-12">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control border-0 bg-light px-4",@id="Email", @type = "text", @placeholder = "Email", @style = "height: 55px;" })
                        </div>
                        <div class="col-12">
                            @Html.TextAreaFor(model => model.NoiDung, new{@class = "form-control border-0 bg-light px-4 py-3",
                           @placeholder = "Nội dung",
                           @id = "floatingTextarea",@style = "height: 150px;",
                           @rows = "5"
                       })
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100 py-3" type="submit" onclick="message()">Gửi tin nhắn</button>
                        </div>
                    </div>
                }
                </div>
            <div class="col-xl-4 col-lg-12 wow slideInUp" data-wow-delay="0.6s">
                <iframe class="position-relative rounded w-100 h-100"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.787874151555!2d106.69744577490849!3d10.827539189324352!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317528f4a62fce9b%3A0xc99902aa1e26ef02!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBWxINuIExhbmc!5e0!3m2!1svi!2s!4v1686482701571!5m2!1svi!2s"
                        frameborder="0" style="min-height: 400px; border:0;" allowfullscreen="" aria-hidden="false"
                        tabindex="0"></iframe>
            </div>
        </div>
    </div>
</div>
<script>
    function message() {
        var name = document.getElementById("HoTen");
        var email = document.getElementById("Email");
        var sdt = document.getElementById("Sdt");
        var nd = document.getElementById("floatingTextarea");
        const danger = document.getElementById("danger");
        if (name.value == "" || email.value == "" || sdt.value == "" || nd.value == "") {
            danger.style.display = "block";
        }
        else {
            setTimeout(() => {
                name.value = "";
                email.value = "";
                sdt.value = "";
                nd.value = "";
            }, 2000);
            alert("Phản hồi thành công.");
        }
        setTimeout(() => {
            danger.style.display = "block";
        }, 4000);
    }
</script>

